<form action="/bookings/<%= booking.id %>/update" method="POST">
    <h5>Update Booking</h5>

    <div class="row">
        <!-- Listing ID (read-only) -->
        <div class="field label border round large">
            <input type="number" name="listing_id" id="listing_id" value="<%= booking.listing_id %>" readonly>
            <label for="listing_id">Listing ID</label>
        </div>

        <!-- Renter ID (read-only) -->
        <div class="field label border round large">
            <input type="number" name="renter_id" id="renter_id" value="<%= booking.renter_id %>" readonly>
            <label for="renter_id">Renter ID</label>
        </div>
    </div>

    <div class="row">
        <!-- Check-in Date -->
        <div class="field label border round large">
            <input type="date" name="check_in" id="check_in" value="<%= booking.check_in.toISOString().split('T')[0] %>" required>
            <label for="check_in">Check-in Date</label>
        </div>

        <!-- Check-out Date -->
        <div class="field label border round large">
            <input type="date" name="check_out" id="check_out" value="<%= booking.check_out.toISOString().split('T')[0] %>" required>
            <label for="check_out">Check-out Date</label>
        </div>
    </div>

    <!-- Guest Count -->
    <div class="field label border round large">
        <input type="number" name="guest_count" id="guest_count" value="<%= booking.guest_count %>" required>
        <label for="guest_count">Guest Count</label>
    </div>

    <!-- Submit Button -->
    <nav class="center-align no-space">
        <button type="button" class="transparent link">Cancel</button>
        <button type="submit" class="transparent link">Update Booking</button>
    </nav>
</form>