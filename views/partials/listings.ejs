<table class="stripes">
    <thead>
    <tr>
        <th></th>
        <th>ID</th>
        <th>Owner ID</th>
        <th>Title</th>
        <th>Description</th>
        <th>Price per Night</th>
        <th>Country</th>
        <th>City</th>
        <th>Street</th>
        <th>House Number</th>
        <th>Property Type</th>
        <th>Rooms</th>
        <th>Max Guests</th>
        <th>Area (mÂ²)</th>
        <th>Bathroom</th>
        <th>WiFi</th>
        <th>Kitchen</th>
        <th>To listing's bookings</th>
    </tr>
    </thead>
    <tbody>
    <% listings.forEach(listing => { %>
        <tr id="listings-<%= listing.id %>">
            <td>
                <label class="checkbox">
                    <input type="checkbox" class="row-checkbox" value="<%= listing.id %>">
                    <span></span>
                </label>
            </td>
            <td><%= listing.id %></td>
            <td><a href="/users?id=<%= listing.owner_id %>" class="ajax-link"><%= listing.owner_id %></a></td>
            <td><%= listing.title %></td>
            <td><%= listing.description %></td>
            <td>$<%= parseFloat(listing.price_per_night).toFixed(2) %></td>
            <td><%= listing.country %></td>
            <td><%= listing.city %></td>
            <td><%= listing.street %></td>
            <td><%= listing.house_number %></td>
            <td><%= listing.property_type %></td>
            <td><%= listing.rooms %></td>
            <td><%= listing.max_guests %></td>
            <td><%= listing.area ? parseFloat(listing.area).toFixed(2) : 'N/A' %></td>
            <td><%= listing.has_bathroom ? 'Yes' : 'No' %></td>
            <td><%= listing.has_wifi ? 'Yes' : 'No' %></td>
            <td><%= listing.has_kitchen ? 'Yes' : 'No' %></td>
            <td>
                <button class="filled-button listing-bookings">
                    Bookings
                </button>
            </td>
        </tr>
    <% }) %>
    </tbody>
</table>

<% if (typeof userName !== 'undefined' && typeof userId !== 'undefined') { %>
    <div class="listings-header table-header row space-between">
        <h5>Listings of user <%= userName %> (user_id = <%= userId %>)</h5>
        <button class="back-to-users">
            <i>arrow_back</i> Back to users
        </button>
    </div>
<% } %>