<form action="/bookings" method="POST">
    <h5>Add New Booking</h5>

    <div class="row">
        <!-- Listing ID -->
        <div class="field label border round large">
            <input type="number" name="listing_id" id="listing_id" required>
            <label for="listing_id">Listing ID</label>
        </div>

        <!-- Renter ID -->
        <div class="field label border round large">
            <input type="number" name="renter_id" id="renter_id" required>
            <label for="renter_id">Renter ID</label>
        </div>
    </div>

    <div class="row">
        <!-- Check-in Date -->
        <div class="field label border round large">
            <input type="date" name="check_in" id="check_in" required>
            <label for="check_in">Check-in Date</label>
        </div>

        <!-- Check-out Date -->
        <div class="field label border round large">
            <input type="date" name="check_out" id="check_out" required>
            <label for="check_out">Check-out Date</label>
        </div>
    </div>

    <!-- Guest Count -->
    <div class="field label border round large">
        <input type="number" name="guest_count" id="guest_count" value="1" required>
        <label for="guest_count">Guest Count</label>
    </div>

    <!-- Submit Button -->
    <nav class="center-align no-space">
        <button type="button" class="transparent link">Cancel</button>
        <button type="submit" class="transparent link">Add Booking</button>
    </nav>
</form>
